void r_changeMYT(Critter&player,Critter@terminal)
{
	Item@armor=player.GetItem(0,(3));
	if((@armor!=null))player.MoveItem(armor.Id,0,(0));
	player.ChangeCrType(21);
	player.StatBase[(112)]=21;
	player.StatBase[(7)]+=350;
	player.StatBase[(16)]+=6;
	player.StatBase[(17)]+=6;
	player.StatBase[(18)]+=6;
	player.StatBase[(19)]+=6;
	player.StatBase[(20)]=0;
	player.StatBase[(21)]+=500;
	player.StatBase[(22)]+=6;
	player.StatBase[(9)]+=20;
	player.StatBase[(30)]=95;
	player.StatBase[(23)]+=30;
