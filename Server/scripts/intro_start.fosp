	player.StatBase[(28)]+=90;
	player.StatBase[(29)]+=25;
	player.SkillBase[(208)]=-250;
	Critter@toCr=GetCritter(player.Id);
	GameVar@var=GetLocalVar((3029),player.Id);
	player.StatBase[(0)]+=3;
	player.StatBase[(2)]+=3;
}

